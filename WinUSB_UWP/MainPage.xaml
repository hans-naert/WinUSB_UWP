<Page
    x:Class="WinUSB_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUSB_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="connectButton" Content="Connect to WinUSB device" Height="47" Margin="74,43,0,0" VerticalAlignment="Top" Width="229" Click="connectButtonClick"/>
        <TextBlock x:Name="USBFound" HorizontalAlignment="Left" Margin="75,132,0,0" Text="Not connected" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="transferButton" Content="Button" Height="35" Margin="75,191,0,0" VerticalAlignment="Top" Width="229" Click="transferButtonClick"/>

    </Grid>
</Page>
